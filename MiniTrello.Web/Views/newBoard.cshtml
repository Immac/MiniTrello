@{
    PageData["title"] = "Mini Trello | Sign In";
}



<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <fieldset>
                <h2>Please Name the Board</h2>
                <hr class="colorgraph">
                <div class="form-group">
                    <input type="text" name="name" ng-model="BoardCreateModel.Title" id="email" class="form-control input-lg" placeholder="My Board">
                </div>
               
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="createBoard()" class="btn btn-lg btn-success btn-block">Sign In</button>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="gotToBoards()" class="btn btn-lg btn-primary btn-block">Register</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <div class="row">
            <p>{{errorMessage}}</p>
        </div>
    </div>
    
</div>
