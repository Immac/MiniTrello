@{
    PageData["title"] = "MiniTrello | Profile";
}
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <h2>Profile Edit <small>Fill in just the data you want to change.</small></h2>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="new_first_name" id="new_first_name" ng-model="profileEditModel.FirstName" class="form-control input-lg" placeholder="New First Name" tabindex="1">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="new_last_name" id="new_last_name" ng-model="profileEditModel.LastName" class="form-control input-lg" placeholder="New Last Name" tabindex="2">
                    </div>
                </div>
            </div>
            <div class="form-group">
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="password" name="new_password" id="new_password" class="form-control input-lg" placeholder="New Password" ng-model="profileEditModel.Password" tabindex="5">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="password" name="new_password_confirmation" id="new_password_confirmation" class="form-control input-lg" placeholder="Confirm New Password" ng-model="profileEditModel.ConfirmPassword" tabindex="6">
                    </div>
                </div>
            </div>
      

            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <button type="submit" ng-click="editProfile()" class="btn btn-primary btn-block btn-lg" tabindex="7">Edit</button>
                </div>
                <div class="col-xs-12 col-md-6">
                    <button ng-click="goToBoards()" class="btn btn-success btn-block btn-lg">Cancel</button>
                </div>
            </div>
            <div ng-show="hasError">
                {{errorMessage}}
            </div>
        </form>
    </div>

</div>
