@{
    PageData["title"] = "Mini Trello | Sign In";
}



<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <fieldset>
                <h2>Name your Lane</h2>
                <hr class="colorgraph">
                <div class="form-group">
                    <input type="text" name="name" ng-model="laneCreateModel.Name" id="name" class="form-control input-lg" placeholder="My Lane">
                </div>
                    

                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="createLane()" class="btn btn-lg btn-success btn-block">Create Lane</button>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="goToBoards" class="btn btn-lg btn-primary btn-block">Return to Boards</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <div class="row">
            <p>{{errorMessage}}</p>
        </div>
    </div>
    
</div>
