<div class="container">
    <div class="row" ng-repeat="board in boards">
        <div class="col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-3 col-md-3 text-center">
                        <img src="http://bootsnipp.com/apple-touch-icon-114x114-precomposed.png" alt="bootsnipp"
                             class="img-rounded img-responsive" />
                    </div>
                    <div class="col-xs-9 col-md-9 section-box">
                        <a href="/board/{{board.Id}}">
                            <h2>
                                {{board.Title}}
                            </h2>
                        </a>
                        <p> Board delete confirmation number: {{board.Id}}
                            
                        </p>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <input type="text" name="newBoard" ng-model="BoardCreateModel.Title" id="newBoard" class="form-control">
            <button ng-click="CreateBoard()" class="btn-lg btn-success">Create board</button>
            <input type="number" name="delete" ng-model="BoardDeleteModel.Id" id="deleteBoard" class="form-control">
            <button ng-click="DeleteBoard()" class="btn-lg btn-warning">Delete Board</button>
        </div>
     </div>
   </div>
