@{
    PageData["title"] = "Mini Trello | Reset Password";
}


<!DOCTYPE html>



<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <fieldset>
                <h2>Fill in your Email, we will send you instructions on what to do next...</h2>
                <hr class="colorgraph">
                <div class="form-group">
                    <input type="email" name="email" ng-model="passwordRestoreModel.Email" id="email" class="form-control input-lg" placeholder="Email Address">
                </div>
                <div class="form-group">
                    <input type="text" name="code" id="code" ng-model="getAccessModel.Password" class="form-control input-lg" placeholder="Code">
                </div>

                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="passwordRestoreSend()" class="btn btn-lg btn-success btn-block">Get Instructions</button>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="passwordRestoreUseCode()" class="btn btn-lg btn-primary btn-block">Login with Code</button>
                    </div>
                    <div class="col-xs-4 col-sm-6 col-md-6">
                        <button ng-click="goToLogin()" class="btn btn-sm btn-warning btn-block">Remembered password</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <div class="row">
            <p>{{errorMessage}}</p>
        </div>
    </div>

</div>
